<p id="notice"><%= notice %></p>



<div class ="allPlaces center">



  <h1>All Restaurants</h1>

  <button class='btn-xs btn-success' >
    <%= link_to 'Home ', root_path %>
  </button>

  <button class='btn-xs btn-success' >
    <%= link_to 'New Restaurant', new_restaurant_path %>
  </button>
  

  <br>




  <% @restaurants.each do |restaurant| %>
      <div class="eachPlace">
        <h2><%= restaurant.name %>  </h2>
        <%= image_tag restaurant.image.url(:medium)%> <br>
        <p>Rating:   <%= restaurant.rating %>   </p>
        <p>Visited on:    <%= restaurant.visited %> </p>
        <%= link_to 'Show', restaurant %>
        <%= link_to 'Edit', edit_restaurant_path(restaurant) %>
        <%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
  <% end %>

</div>


<br>
